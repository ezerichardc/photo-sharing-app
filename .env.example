# Azure Configuration
# Copy this file to .env and fill in your Azure credentials

# Azure Cosmos DB
VITE_AZURE_COSMOS_ENDPOINT=https://your-cosmos-account.documents.azure.com:443/
VITE_AZURE_COSMOS_KEY=your-cosmos-primary-key
VITE_AZURE_COSMOS_DATABASE=photoshare-db

# Azure Blob Storage
VITE_AZURE_STORAGE_ACCOUNT=your-storage-account
VITE_AZURE_STORAGE_SAS_TOKEN=your-sas-token
VITE_AZURE_STORAGE_CONTAINER=photos

# Azure Cache for Redis
VITE_AZURE_REDIS_HOST=your-redis.redis.cache.windows.net
VITE_AZURE_REDIS_PORT=6380
VITE_AZURE_REDIS_KEY=your-redis-access-key

# Azure Front Door
VITE_AZURE_FRONTDOOR_ENDPOINT=https://your-frontdoor.azurefd.net

# Azure Active Directory B2C
VITE_AZURE_AD_B2C_TENANT=your-tenant.onmicrosoft.com
VITE_AZURE_AD_B2C_CLIENT_ID=your-client-id
VITE_AZURE_AD_B2C_POLICY_SIGNIN=B2C_1_signupsignin
VITE_AZURE_AD_B2C_POLICY_SIGNUP=B2C_1_signup
VITE_AZURE_AD_B2C_REDIRECT_URI=http://localhost:5173/auth/callback
